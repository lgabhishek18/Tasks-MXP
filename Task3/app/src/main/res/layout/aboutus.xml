<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="match_parent"
        android:id="@+id/text1"
        android:layout_marginTop="20dp"
        android:text="About Us"
        android:textSize="30dp"
        android:layout_marginLeft="130dp"
        android:textColor="#F44336"
        android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:id="@+id/card"
        android:layout_below="@id/text1"
        android:layout_marginTop="50dp"
        android:layout_height="100dp">
        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/image1"
            android:background="@drawable/ceo"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/text2"
        android:layout_toRightOf="@id/card"
        android:layout_marginTop="130dp"
        android:textSize="26dp"
        android:textColor="#1F39CC"
        android:text="Karan Bedi - CEO"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:id="@+id/card2"
        android:layout_below="@id/card"
        android:layout_marginTop="50dp"
        android:layout_height="100dp">
        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/image2"
            android:background="@drawable/manager"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/text3"
        android:layout_toRightOf="@id/card2"
        android:layout_marginTop="280dp"
        android:textSize="26dp"
        android:textColor="#1F39CC"
        android:text="Sandeep Das - VP"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:id="@+id/card3"
        android:layout_below="@id/card2"
        android:layout_marginTop="50dp"
        android:layout_height="100dp">
        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/image3"
            android:background="@drawable/hr"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/text4"
        android:layout_toRightOf="@id/card3"
        android:layout_marginTop="430dp"
        android:textSize="26dp"
        android:textColor="#1F39CC"
        android:text="Sidd Mantri - VP"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content"/>

</RelativeLayout>