<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/textgallery"
        android:layout_marginTop="20dp"
        android:text="Gallery"
        android:textSize="30dp"
        android:layout_marginLeft="160dp"
        android:textColor="#F44336"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_width="200dp"
        android:background="@drawable/bhaukal"
        android:id="@+id/series1"
        android:layout_below="@id/textgallery"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="110dp"
        android:layout_height="wrap_content"  />

    <TextView
        android:layout_width="match_parent"
        android:textSize="29dp"
        android:text="Bhaukal"
        android:id="@+id/textseries1"
        android:layout_below="@id/series1"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textColor="#882708"
        android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="200dp"
                android:background="@drawable/ashramm"
                android:id="@+id/series2"
                android:layout_below="@id/textseries1"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="110dp"
                android:layout_height="350dp"  />

            <TextView
                android:layout_width="match_parent"
                android:textSize="29dp"
                android:text="Ashram"
                android:id="@+id/textseries2"
                android:layout_below="@id/series2"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textColor="#882708"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="200dp"
                android:background="@drawable/mature"
                android:id="@+id/series3"
                android:layout_below="@id/textseries2"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="110dp"
                android:layout_height="250dp"  />

            <TextView
                android:layout_width="match_parent"
                android:textSize="29dp"
                android:text="Immature"
                android:id="@+id/textseries3"
                android:layout_below="@id/series3"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textColor="#882708"
                android:layout_height="wrap_content" />


        </RelativeLayout>

    </ScrollView>

</RelativeLayout>